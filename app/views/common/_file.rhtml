<style>
.uv-file pre {
  font-size: 12px;
  margin: 0 0 0 0;
  padding: none;
}

.uv-file {
  overflow-x: auto; 
  border: 4px solid black;
}
</style>

<div class="uv-file">
  <% if local_assigns.has_key? :to_utf8 %>
    <%= syntax_highlight(filename, to_utf8(content)) %>
  <% else %>
    <%= syntax_highlight(filename, to_utf8_for_repositories(content)) %>
  <% end %>
</div>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag "uv_themes/#{Redmine::SyntaxHighlighting.highlighter.get_uv_theme_name}", :plugin => 'redmine_ultraviolet' %>
<% end %>
